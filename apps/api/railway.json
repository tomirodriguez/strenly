{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm install && pnpm --filter api build",
    "watchPatterns": [
      "/apps/api/**",
      "/packages/backend/**",
      "/packages/database/**",
      "/packages/core/**",
      "/packages/contracts/**",
      "/packages/auth/**"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/api && node dist/server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "overlapSeconds": 30,
    "drainingSeconds": 10
  }
}
