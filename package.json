{
  "name": "strenly",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "./scripts/dev-server.sh",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check": "pnpm biome check .",
    "format": "pnpm biome check --write .",
    "db:generate": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:generate",
    "db:push": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:push",
    "db:drop": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:drop",
    "db:studio": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:studio",
    "db:migrate": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:migrate",
    "db:seed": "npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:seed",
    "db:seed:plans": "dotenv -e .env -- tsx scripts/seed-plans.ts",
    "db:start": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d && sleep 3 && npx dotenv-cli -e .env -- pnpm --filter @strenly/database db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/node": "^25.0.10",
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.7.3"
  }
}